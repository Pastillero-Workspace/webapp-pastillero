<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="mx.com.pastillero.model.formBeans.Referencias" table="Referencias">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="idPersona" type="int" column="idPersona">
         <generator class="native"/>
      </id>
      <property name="parentesco" column="parentesco" type="string"/>
      <property name="ife" column="IFE" type="string"/>
      <property name="telefono" column="telefono" type="string"/>
      <property name="idDireccion" column="idDireccion" type="int"/>
      </class>
</hibernate-mapping>